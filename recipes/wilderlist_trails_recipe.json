{
  "version": 1,
  "layers": {
    "trails": {
      "source": "mapbox://tileset-source/wsoeltz/trails-usa-v1",
      "minzoom": 4,
      "maxzoom": 10,
      "features": {
        "filter": [">=",
          ["zoom"],
          ["match",
            ["get", "rank"],
            1, 6.5,
            2, 7.25,
            3, 8, 10
          ]
        ],
        "simplification": [ "case",
          [ "==", [ "zoom" ], 10 ], 1,
          [ "==", [ "zoom" ], 11 ], 0,
          4
        ]
      },
      "tiles": {
        "union": [
          {
            "group_by": [ "name", "merge_id" ],
            "maintain_direction": false,
            "aggregate": {
              "id": "comma"
            }
          }
        ]
      }
    },
    "roads": {
      "source": "mapbox://tileset-source/wsoeltz/trail-roads-usa-v1",
      "minzoom": 4,
      "maxzoom": 10,
      "features": {
        "filter": [">=",
          ["zoom"],
          ["match",
            ["get", "rank"],
            4, 8.5,
            5, 9.5, 10
          ]
        ],
        "simplification": [ "case",
          [ "==", [ "zoom" ], 8 ], 4,
          [ "==", [ "zoom" ], 10 ], 2,
          [ "==", [ "zoom" ], 11 ], 1,
          [ "==", [ "zoom" ], 12 ], 0,
          5
        ]
      },
      "tiles": {
        "union": [
          {
            "group_by": [ "name", "merge_id" ],
            "maintain_direction": false,
            "aggregate": {
              "id": "comma"
            }
          }
        ]
      }
    }
  }
}
